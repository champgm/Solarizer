{
  "name": "solarizer",
  "version": "1.0.5",
  "description": "A utility with the ability to convert RGB/HEX colors into a Solarized-style theme by mimicking the color differences found in the Solarized \"Base\" colors.",
  "main": "tsc-out/index.js",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "package-publish": "npm run build && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/champgm/solarizer.git"
  },
  "keywords": [
    "solarized",
    "colors"
  ],
  "author": "champgm",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/champgm/solarizer/issues"
  },
  "homepage": "https://github.com/champgm/solarizer#readme",
  "devDependencies": {
    "@types/jest": "^24.0.17",
    "@types/node": "^12.7.1",
    "jest": "^24.8.0",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    },
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "collectCoverage": false,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageDirectory": "coverage",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
